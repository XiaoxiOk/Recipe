<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xi.mapper.MaterialMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.xi.model.pojo.Material">
        <id column="id" property="id" />
        <result column="recipe_id" property="recipeId" />
        <result column="food_name" property="foodName" />
        <result column="consumption" property="consumption" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, recipe_id, food_name, consumption
    </sql>

</mapper>
