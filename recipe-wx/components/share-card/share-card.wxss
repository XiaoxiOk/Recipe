/* components/share-card/share-card.wxss */

.usershare-card{
    display: flex;
    flex-wrap: wrap;
    box-sizing: border-box;
    padding: 25rpx 2%  15rpx;
    margin: 0 auto 10rpx;
    border: 2rpx solid #eee;
    border-right: 0;
    border-left: 0;
    box-shadow: 0 0 5rpx #999;
}

.content{
    display: block;
    font-size: 40rpx;
    line-height: 60rpx;
    margin: 15rpx 0;
}
.content_img{
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    box-sizing: border-box;
    padding: 0 0.5%;
}
.content_img image{
    width: 32%;
    margin: 0 0.5%;
    height: 200rpx;
}
.usershare-card .media-box{
    width: 90%;
    position: relative;
    box-sizing: border-box;
    width: 100%;
}
.usershare-card .media-box .shareImg{
    display: inline-block;
    width: 100rpx;
    height: 200rpx;
    
}
.show-media{
    width: 32%;
    margin: 0 0.5%;
    height: 200rpx;
}

.usershare-card .handle-line{
    position: relative;
    box-sizing: border-box;
    width: 100%;
    margin: 20rpx 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.usershare-card .handle-line .handle-icon{
    width: 65rpx;
    height: 65rpx;
}
.handle-line view{
    display: flex;
    align-items: center;
}
.show-counts{
    margin: 0 25rpx;
}
.usershare-card .handle-line .time-icon{
    width: 40rpx;
    height: 40rpx;
    margin-right: 15rpx;
}