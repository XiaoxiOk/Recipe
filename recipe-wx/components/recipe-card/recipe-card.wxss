/* components/recipe-card/recipe-card.wxss */
/* 纵向列表 */

  
    .show-item .show-image {
        text-align: center;
        width: 300rpx;
        height: auto;
        font-size: 0;
    vertical-align: middle;
  }
  
    .show-item {
    position: relative;
    display: flex;
    justify-content: start;
    padding: 20rpx;
    border-radius: 20rpx;
    background: #fff;
    margin-bottom: 20rpx;
    box-shadow: 0 16rpx 32rpx 0 rgba(7, 17, 27, 0.05);
  }
  
    .show-item .content-right {
    margin-left: 20rpx;
    width: 75%;
  }
  

  
    .show-item .content-right .go-to-buy {
    font-size: 26rpx;
    background: #eb2444;
    color: #fff;
    border-radius: 50rpx;
    width: 150rpx;
    text-align: center;
    padding: 8rpx 3rpx;
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
  }
  
    .show-item .content-right .title {
    margin: 0 0 15rpx;
    font-size: 40rpx;
    line-height: 50rpx;
    
    display: -webkit-box;
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    color: #000;
  }
  .show-item .content-right .difficuly {
    font-size: 18rpx;
  }
  .show-image .content-right .detail {
    font-size: 12rpx;
    line-height: 20rpx;
    box-sizing: border-box;
    padding:10rpx 0 10rpx 10rpx;
    color:rgb(12, 11, 11);
    overflow: hidden; 
    max-width: calc( 100% - 80rpx);
    white-space: nowrap;
    text-overflow: ellipsis;
    width: calc( 100% - 80rpx);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
  }
  .difficulty{
      font-size: 34rpx;
  }
  .detail {
      font-size: 34rpx;
    overflow: hidden;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    margin-bottom: 15rpx;
  }
  .show-item .content-right .user-info {
    font-size: 22rpx;
    color: #999;
    margin: 10rpx 0 20rpx 0;
    display: flex;
  }
  .user-info .avatar {
    display:inline-block;
    width: 60rpx;
    height: 60rpx;
    border: 1px solid rgb(145, 141, 141);
    border-radius: 40px;
    overflow: hidden;
}

.user-info .user-name{
    display:inline-block;
    margin: auto 0;
    font-size: 30rpx;
    margin-left: 10rpx;
}

  