/* pages/login/login.wxss */


.logo-img {
  display: block;
  width: 300rpx;
  height: 300rpx;
  margin: auto;
  margin-top: 100rpx;
  border-radius: 50%;
}

view.msg {
  font-size: 24rpx;
  color: #666;
  width: 100%;
  text-align: center;
  margin-top: 10rpx;
}

view.title {
  font-size: 35rpx;
  color: #333;
  width: 100%;
  text-align: center;
  margin: 20rpx 0;
}

button {
  margin-top: 80rpx;
  width: 450rpx;
  height: 70rpx;
  line-height: 70rpx;
  letter-spacing: 3px;
  font-size: 30rpx;
  color: #fff;
  background: #eb2444;
  border: 2rpx solid #eb2444;
}


.button-hover{
  background-color: #fff;
  color: #eb2444;
}

page{
  background: #fff;
  height: 100%;
}
.con{
  padding-top: 100rpx;
}

.logo {
  display: flex;
  justify-content: center;
  height: 150rpx;
  margin-bottom: 8%;
}
.logo image {
  display: block;
  width: 100%;
  height: 100%;
}

.login-form{
  width: 90%;
  margin: 0 auto;
  margin-top: 20%;
}
.authorized-btn {
  width: 100%;
  height: 100rpx;
  margin: 0 auto;
  text-align: center;
  vertical-align:middle;
  line-height: 100rpx;
  background-color: #fa140c;
  border: 1rpx solid #ff6308;
  color: #fff;
  border-radius: 6rpx;
  font-size: 36rpx;
  margin-top: 60rpx;
}
.to-idx-btn{
	width: 100%;
	margin: 0 auto;
    text-align: center;
    height: 100rpx;
    vertical-align:middle;
  line-height: 100rpx;
  background-color: #eeeeee;
  border: 1rpx solid #eeeeee;
	color: #333;
	border-radius: 6rpx;
	font-size: 34rpx;
	margin-top: 30rpx;
}



button::after{
  border: 0 !important;
}


.tips {
    margin-top: 120rpx;
	font-size: 30rpx;
	color: #f35b14;
}

/* 手机号弹窗*/
.title-tip{
    margin-top: 50rpx;
    box-sizing: border-box;
    font-size: large;
    font: weight 550;
    font-size: larger;
    margin-bottom: 40rpx;
    text-align: center;
    align-items: center;
    letter-spacing: 5px;
}
.show-input-css{
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    margin-top: 80rpx;
    padding: 10rpx 10rpx 30rpx;
    align-items: center;
}
.show-input-css input{
    border: 1px solid #ddd;
    width: calc(100% - 220rpx);
    height: 90rpx;
    box-sizing: border-box;
    padding-left: 20rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;
    font-size: 40rpx;
    line-height: 70rpx;
}
.show-input-css button{
    background-color: orangered;
    color: #fff;
    width: 180rpx;
    height: 90rpx;
    font-size: 40rpx;
    line-height: 80rpx;
    text-align: center;
    padding: 0;
    margin: 0;
}
.error-tip{
    margin-left: 70rpx;
    margin-top: 0rpx;
	font-size: 30rpx;
	color: red;
}


