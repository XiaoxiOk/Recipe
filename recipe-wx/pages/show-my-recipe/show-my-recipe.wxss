/* pages/show-my-recipe/show-my-recipe.wxss */
.recipe-show {
    background: #fff;
    margin-top: 160rpx;
}
.tip-text{
    box-sizing: border-box;
    width:100%;
    height: 200px;
    display: flex;
   margin-top: 20px;
   align-items: center;
   justify-content:center;
}
.wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
}

.block {
    width: 120px;
    background-color: #fff;
}

/* components/recipe-cross/recipe-cross.wxss */
/* @import "../../app.wxss"; */
.recipe-items {
    width: 48%;
    float: left;
    background: #fff;
    padding-bottom: 20rpx;
    box-sizing: border-box;
    padding: 0 20rpx 20rpx;
    margin: 0rpx 1% 20rpx;
}

