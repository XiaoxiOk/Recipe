.showImg {
    border-radius: 8rpx;
    text-align: center;
    font-size: 0;
    width: 345rpx;
    height: 345rpx;
    display: block;
    margin: 0 auto;
}

.hot-text .title {
    margin-top: 20rpx;
    height: 76rpx;
    font-size: 28rpx;
    display: -webkit-box;
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    color: #000;
}

.title {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.recipe-items .detail {
    font-size: 24rpx;
    color: #777;
    margin-top: 8rpx;

    overflow: hidden;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}

.user-info {
    font-size: 22rpx;
    color: #999;
    margin: 10rpx 0 20rpx 0;
    display: flex;
}

.user-info .avatar {
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
    border: 1px solid rgb(145, 141, 141);
    border-radius: 40px;
    overflow: hidden;
}

.user-info .user-name {
    display: inline-block;
    margin: auto 0 auto 10rpx;
    font-size: 24rpx;
}

.difficulty {
    font-size: 32rpx;
}