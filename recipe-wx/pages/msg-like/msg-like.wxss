/* pages/msg-like/msg-like.wxss */
.container{
    background-color: #fff;
    padding: 15rpx 0;
}
.msg-card{
    display: flex;
    align-items: center;
    box-sizing: border-box;
    height: auto;   /*自定义px时可测试分页*/
    padding: 0 15rpx;
    /* border-bottom: 1rpx solid #eee; */
    border-right: 0;
    border-left: 0;
    /* box-shadow: 0 0 5rpx #999; */
    justify-content: space-between;
}
.msg-card .l{
    display: flex;
    align-items: center;
    width: 70%;
}
.msg-card .l .l_con{
    display: flex;
    flex-wrap: wrap;
    font-size: 32rpx;
    text-align: left;
    line-height: 40rpx;
}
.msg-card .l .l_con view{
    width: 100%;
}
.msg-card .l .l_con view:nth-child(2){
    margin: 10rpx 0;
}
.msg-card .l .l_con .time{
    font-size: 26rpx;
}
.msg-card .r {
    font-size: 30rpx;
    text-align: center;
    width: 30%;
}
.msg-card .r image{
    margin: 0 auto 10rpx;
    display: block;
}
.msg-card .r view{
    text-align: left;
}
.card{
    position: relative;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    padding: 0 10rpx 10rpx;
    flex-wrap: wrap;
    background-color: #fff;
    align-items: center;
}
 .avatar {
     width: 120rpx;
     height: 120rpx;
    border: 1px solid rgb(90, 86, 86);
    border-radius: 50%;
    margin-right: 30rpx;
}
.recipe-cover{
    display:inline-block;
    width: 200rpx;
    height: 150rpx;
    border: 1px solid rgb(90, 86, 86);
    overflow: hidden;
}
.tip-text{
    font-weight:bold;
}
.wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
}
.block {
    width: 120px;
    background-color: #fff;
}
